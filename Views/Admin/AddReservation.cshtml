@model Lab2MVC.Models.Reservation

<h2>Lägg till ny bokning</h2>

<form asp-action="AddReservation" method="post">
    <div class="form-group">
        <label for="CustomerId">Kund ID</label>
        <input type="number" class="form-control" id="CustomerId" name="CustomerId" asp-for="CustomerId" required />
    </div>
    <div class="form-group">
        <label for="TableId">Bord ID</label>
        <input type="number" class="form-control" id="TableId" name="TableId" asp-for="TableId" required />
    </div>
    <div class="form-group">
        <label for="ReservationDate">Datum</label>
        <input type="datetime-local" class="form-control" id="ReservationDate" name="ReservationDate" asp-for="ReservationDate" required />
    </div>
    <div class="form-group">
        <label for="NumberOfGuests">Antal gäster</label>
        <input type="number" class="form-control" id="NumberOfGuests" name="NumberOfGuests" asp-for="NumberOfGuests" required />
    </div>
    <button type="submit" class="btn btn-primary">Lägg till bokning</button>
</form>
